        <tr valign="top">
          <td colspan="3" height="30">&nbsp;</td>
        </tr>
        <tr valign="top">
          <td width="30">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>
          <td>

      <table cellpadding="0" cellspacing="0" width="100%" border="0">
            <tr valign="top">
            <td>
            <!-- Use owner.displayableName as of release 6.3 the owner is available to use in bulk reassignemnt templates -->
            <p style="margin:20px 0 0;padding:0;color:#333;font:bold 10pt Arial;line-height:15pt;">$!{owner.displayableName},</p>
            <br/>

            <p style="margin:0 0 20px;padding:0;color:#333;font:normal 10pt Arial;line-height:15pt;">$!{requesterName} has assigned $!{numNewIdentities} users to you for access certification.</p>
            <p style="margin:0;padding:0;color:#333;font:normal 10pt Arial;line-height:15pt;">A specific access review reassignment named <b>$!{certificationName}</b> has been created for you, and is due on <strong>$spTools.formatDate( $certification.expiration,3,3)</strong>.</p>
            
            <!-- CHANGE STYLE COLOR IN anchor or a TAG BELOW and in all anchor tags that apply below : red - #a22831 ; blue - #0987a0 -->
            <p style="margin:20px 0;padding:0;color:#333;font:bold 10pt Arial;line-height:15pt;"><a href="http://localhost:8080/identityiq/manage/certification/entityList.jsf?certificationId=$!{certification.id}">Click here to get started on this task.</a></p>
            <p style="margin:0 0 20px;padding:0;color:#333;font:normal 10pt Arial;line-height:15pt;">
            <strong>Description:</strong></br>
            $!{description}<br/>
            <br/>
            <strong>Comments from $!{requesterName}:</strong></br>
            $!{comments}</p>
            <p style="margin:0;padding:0;color:#333;font:normal 10pt Arial;line-height:15pt;">Thank you for your cooperation,</p><br />
            <p style="margin:0 0 20px;padding:0;color:#333;font:bold 10pt Arial;line-height:15pt;">The Security and Compliance Organization</p>
            </td>
            <td width="220" align="right">
            
              <table cellpadding="0" cellspacing="0" width="192" border="0" style="margin-bottom:30px">
                <tr valign="top">
                <td style="background:#668641;border-bottom:2px solid #fff;">
                  <!-- CHANGE HEADER BACKGROUND COLOR ABOVE : green - #668641 ; red - #a22831 -->
                  <p style="color:#fff;font:bold 11pt Arial;margin:10px 0 10px 15px;line-height:13pt;">Details</p>
                </td>
                </tr>
                <tr valign="top">
                <td style="background:#e7e6e6;border-bottom:2px solid #fff;">
                  <p style="color:#000;font:normal 8pt Arial;margin:10px 0 10px 15px;line-height:13pt;"><strong>Due Date: </strong>$spTools.formatDate($certification.expiration,3,3)</p>
                </td>
                </tr>
                <tr valign="top">
                <td style="background:#e7e6e6;border-bottom:2px solid #fff;">
                  <p style="color:#000;font:normal 8pt Arial;margin:10px 0 0 15px;padding:0;line-height:13pt;"><strong>Reassigned By: </strong>$!{requesterName}</p>
                    <p style="color:#000;font:normal 8pt Arial;margin:0 0 0 15px;padding:0;line-height:13pt;"><strong>Reassigned Date: </strong>$spTools.formatDate($certification.created,3,3)<br/></p>
                </td>
                </tr>
                <tr valign="top">
                <td style="background:#e7e6e6;border-bottom:2px solid #fff;">
                  <p style="color:#000;font:bold 8pt Arial;margin:10px 0 0 15px;padding:0;line-height:13pt;">Tags:</p>
                    <p style="color:#000;font:normal 8pt Arial;margin:0 0 0 15px;padding:0;line-height:13pt;">
#foreach( $tag in $certification.tags )
$tag.name</br>
#end
</p>
                </td>
                </tr>
                </table>
            </td>
            </tr>
            </table>
            
            </td>
            <td width="10">&nbsp;&nbsp;&nbsp;&nbsp;</td>
        </tr>
        <tr valign="top">
          <td colspan="3">
            
            <table cellspacing="0" cellpadding="0" width="550" border="0">
            <tr valign="middle">
            <td>
            <!-- HELP LINKS -->
            <!-- REPLACE THESE LINKS TO POINT TO ENVIRONMENT SPECIFIC LOCATIONS -->
            <p style="margin:0 0 0 30px;padding:0;color:#b0adad;font:normal 8pt Arial;line-height:12pt;margin-bottom:30px;"><a href="#" style="color:#666666;text-decoration:none;font-weight:bold;">Help</a> &nbsp;|&nbsp; <a href="#" style="color:#666666;text-decoration:none;font-weight:bold;">FAQs</a> &nbsp;|&nbsp; <a href="#" style="color:#666666;text-decoration:none;font-weight:bold;">Support</a></p>
            </td>
            <td width="145">
            <!-- START TASK BUTTON -->
            <!-- CHANGE BACKGROUND COLOR BELOW : red - #9f2d32 ; green - #668641 -->
            <!-- CHANGE BORDER COLOR BELOW : red - #b35b62 ; green - #78a347 -->
            <div style="background:#668641;border:3px solid #78a347;width:145px;height:33px;float:right;margin-bottom:30px;">
              <a href="http://localhost:8080/identityiq/manage/certification/entityList.jsf?certificationId=$!{certification.id}" 
                style="color:#fff; text-align:center;font:normal 14pt Arial;display:block;margin-top:3px;text-decoration:none;">
                <!--<img src="http://www.sailpoint.com/mailers/task-alert/btn-start-task.png" border="0" width="145" height="33" alt="Start Task" />-->
                Start Task
              </a>
            </div>
            <!-- /BUTTON -->
            </td>
            </tr>
            </table>            
            </td>
        </tr>
        </table>
        <!-- /CONTENT -->
        
        <!-- FOOTER -->
        <!-- CHANGE BACKGROUND COLOR IN STYLE BELOW: blue - #0987a0 ; tan - #847f5c -->
        <table cellpading="0" cellspacing="0" width="588" style="background:#0987a0;margin:0;padding:0;text-align:right;border-top:5px solid #e4e4e4;">
        <tr valign="middle">
          <td height="60">&nbsp;&nbsp;&nbsp;&nbsp;</td>
        </tr>
        </table>
        <!-- /FOOTER -->
        
        <!-- /EMAILER -->
        </td>
    </tr>
    </table>

</body>
</html>

    ]]>    
    
    </Body>
  </EmailTemplate>

